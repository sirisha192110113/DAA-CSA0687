#include <stdio.h>
#include <string.h>

int main() {
    char str[30];
    // declare variables
    int i, length, flag = 0;

    // take input of string
    printf("Enter the string: ");
    scanf("%s", str);

    // calculate the length of string
    length = strlen(str);
    for (i = 0; i < (length / 2); i++) {
        if (str[i] != str[length - 1 - i]) {
            printf("%s is not a palindrome string!\n", str);
            flag = 1;
            break;
        }
    }
    if (flag == 0)
        printf("%s is a palindrome string!\n", str);

    return 0;
}

